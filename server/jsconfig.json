{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "checkJs": true,
    "strict": true,
    "allowJs": true,
    "types": ["node", "express"],
    "typeRoots": ["./node_modules/@types"],
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["**/*.js", "**/*.json"],
  "exclude": ["node_modules"]
} 